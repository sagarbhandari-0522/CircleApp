@model List<User>
<div class="flex items-baseline justify-between text-black">
    <h3 class="font-bold text-base"> People you may know </h3>
</div>

<div class="side-list">

    @foreach (var user in Model)
    {
        <div class="side-list-item">
            <a>
                <img src=@(string.IsNullOrEmpty(user.ProfilePictureUrl)? Url.Content("~/images/avatar/user.jpeg"):Url.Content($"~/images/uploads/profile_pictures/{user.ProfilePictureUrl}")) class="side-list-image rounded-full" />
            </a>
            <div class="flex-1">
                <a>
                    <h4 class="side-list-title">
                        @user.FullName
                    </h4>
                </a>
                <div class="side-list-info">7 followers</div>
            </div>
            <form>
                <button type="submit" class="button bg-primary-soft text-primary">Follow</button>
            </form>
        </div>
    }

</div>
